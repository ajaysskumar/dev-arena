<div class="callout-box @GetCalloutType() py-1">
        <div class="py-1">
            <span class="callout-icon">@GetIcon()</span>
            <span class="callout-title">@Title</span>
            </div>
        <div class="callout-message">
            @ChildContent
        </div>
</div>

