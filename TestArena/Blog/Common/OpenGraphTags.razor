@inject NavigationManager NavigationManager
@using Microsoft.AspNetCore.Components.Web

<PageTitle>@Title</PageTitle>
<HeadContent>
    <meta property="og:url" content="@AbsoluteUrl" />
    <meta property="og:title" content="@Title" />
    <meta property="og:description" content="@Description" />
    <meta property="og:image" content="@ImageAbsoluteUrl" />
    <meta property="og:type" content="article" />
</HeadContent>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Description { get; set; } = string.Empty;
    [Parameter] public string ImageUrl { get; set; } = string.Empty;

    private string AbsoluteUrl => NavigationManager.Uri;
    
    private string ImageAbsoluteUrl => 
        string.IsNullOrEmpty(ImageUrl) ? string.Empty :
        ImageUrl.StartsWith("http") ? ImageUrl : 
        $"{NavigationManager.BaseUri}{ImageUrl}";
}
